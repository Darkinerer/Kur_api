  <option>Фільми</option>
  <option>Шопінг</option>
  <option>Танці</option>
  <option aria-checked="true">Не визначився</option>
  </select>
          <br>
           
      {{/each}}
           
        	    <div class="form-group ">

 <input type="submit" value="Отправить" style="width: 250px;" target="_blank"  id="button" class="btn btn-primary btn-lg btn-block email-button" />
