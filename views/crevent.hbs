 <script>
     let i=0
     function d()
     {
         
         if(i==1)
         {
     
    
         document.getElementById('lat').hidden=false
         document.getElementById('lng').hidden=false;
         i--
         }
         else{
           
         document.getElementById('lat').hidden=true
         document.getElementById('lng').hidden=true;
         i++
         }
     }
 </script>