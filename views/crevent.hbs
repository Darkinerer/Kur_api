<body>
     
<div style="margin-top: 20px;" class="well">
    
    <div style="margin-top: 20px;" id="myTabContent" class="tab-content">
      <form action="/crevent" method="POST">
      <div class="tab-pane active in" >
      
       {{#each user}}
           
         
            <input style="margin-left: 105.5px;" id="id" name="id" hidden="true" value="{{this.id}}">
            <br>
            <label style="margin-left: 20px;">Назва</label>
        
            <input style="margin-left: 94.5px; " type="text" value="" name="name" id="name"class="input-xlarge">
 <br>
          <label style="margin-left: 20px;" >Додати координати події </label><input type="checkbox" name="chkc" id="checkCoords" onclick="d()"> 
            <br>
           <label style="margin-left: 20px;" >Довгота</label>
            <input hidden="true" style="margin-left: 84px;" type="number" step="0.000000000000001" id="lng"  name="lng"  class="input-xlarge">
          <br>
           <label style="margin-left: 20px;" >Широта</label>
            <input hidden="true"  style="margin-left: 84px;" type="nuber"id="lat"step="0.000000000000001"  name="lat"  class="input-xlarge">
          <br>
         
        <label style="margin-left: 20px;">Про подію</label>
            <textarea style="margin-left: 54px;width:350px; heigth:150px" id="description" name="description"class="input-xlarge">
            </textarea>
             <br>
    <label style="margin-left: 20px;">Тег події</label>          
      <select  style="width: 150px;margin-left: 20px;" name="tag" class="form-control" aria-valuetext="">
  <option> Ігри</option>
  <option>Спорт</option>
  <option>Кулінарія</option>
